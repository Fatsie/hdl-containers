set -e

makedepends=(
  automake
  autoconf
  check
  flex
  bison
  libdw-dev
  libffi-dev
  llvm-dev
  pkg-config
  zlib1g-dev
  libzstd-dev
  tcl-dev
)

build() {
  git clone https://github.com/nickg/nvc /tmp/nvc
  cd /tmp/nvc
  ./autogen.sh
  mkdir build
  cd build
  ../configure
  make -j$(nproc)
  make DESTDIR=/opt/nvc install
}

depends=(
  binutils
  libdw1
  libllvm11
  make
  libzstd1
  libtcl8.6
)
