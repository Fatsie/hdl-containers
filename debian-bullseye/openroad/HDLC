set -e

makedepends=(
  bison
  flex
  liblemon-dev
  libeigen3-dev
  libomp-11-dev
  libreadline-dev
  libspdlog-dev
  swig
  tcl-dev
  tcllib
)

makedepends_gui=(
  qtbase5-dev
)

setup() {
  git clone --recursive https://github.com/The-OpenROAD-Project/OpenROAD.git /tmp/openroad
  cd /tmp/openroad
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g;s/^v//g' > /tmp/hdlc.openroad.version
  mkdir build
}

build() {
  cd /tmp/openroad/build
  cmake ..
  make DESTDIR=/opt/openroad install
}

# -DBUILD_GUI=ON

depends=(
  libomp5-11
  libpython3.9
  libspdlog1
  tcl
)

depends_gui=(
  libqt5widgets5
)
