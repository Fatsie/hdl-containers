set -e

cd $(dirname "$0")/../..

imgprefix="${HDL_REGISTRY:-gcr.io/hdl-containers}/${HDL_ARCH:-amd64}/${1}"
shift

for img; do
  image="${imgprefix}/${img}"

  echo "[dockerTest] docker inspect"
  docker inspect --format='{{ println "Architecture:" .Architecture .Variant }}{{ println   "Size:" .Size }}VirtualSize: {{ .VirtualSize }}' "${image}"

  cmd="docker run --rm -v /$(pwd)://wrk ${image} //wrk/test/`echo ${img} | sed -e 's#:#--#'   -e 's#/#--#'`.sh"
  echo "[dockerTest] $cmd"
  $cmd
done
