set -e

cd $(dirname "$0")/../..

_img="${2}"
_image="${HDL_REGISTRY:-gcr.io/hdl-containers}/${HDL_ARCH:-amd64}/${1}/${_img}"

docker inspect --format='{{ println "Architecture:" .Architecture .Variant }}{{ println "Size:" .Size }}VirtualSize: {{ .VirtualSize }}' "${_image}"

_script="`echo ${_img} | sed -e 's#:#--#' -e 's#/#--#'`"
if [ -n "$3" ]; then
  _script="$3"
fi

docker run --rm -v /$(pwd)://wrk "${_image}" //wrk/test/"${_script}".sh
