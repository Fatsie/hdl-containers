set -e

makedepends=(
  csh
  libcairo2-dev
  libglu1-mesa-dev
  libncurses-dev
  libx11-dev
  m4
  python3-dev
  tcl
  tcl-dev
  tcl-expect
  tcsh
  tk-dev
)

build() {
  git clone https://github.com/RTimothyEdwards/magic /tmp/magic
  mkdir -p /opt/magic/
  cd /tmp/magic
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g;s/^v//g' > /tmp/hdlc.magic.version
  ./configure
  make -j$(nproc)
  make install
  make DESTDIR=/opt/magic install
}

depends=(
  libcairo2
  libglu1-mesa
  libncurses6
  libx11-6
  tcl
  tk
)
