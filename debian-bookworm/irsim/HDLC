set -e

makedepends=(
  m4
  tk-dev
)

build() {
  git clone --recursive https://github.com/RTimothyEdwards/irsim.git /tmp/irsim
  cd /tmp/irsim
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g;s/^v//g' > /tmp/hdlc.irsim.version
  ./configure
  make -j$(nproc)
  make DESTDIR=/opt/irsim install
}

depends=(
  tk
)
